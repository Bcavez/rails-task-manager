<h1><%= @task[:title] %></h1>
<p><%= @task[:details] %></p>
<p><%= check_box_tag 'completed', 'completed', @task[:completed], disabled: true %></p>
<p></p>
<% if @task[:completed] == true %>
  <p>The task is completed.</p>
<% else %>
  <p>The task is not completed yet.</p>
<% end %>

<%= link_to "Back to List", tasks_path %>
